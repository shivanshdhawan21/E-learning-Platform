<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <title>E-LEARN | <%= title %></title>
  <meta content="width=device-width, initial-scale=1.0" name="viewport">
  <meta content="" name="keywords">
  <meta content="" name="description">

  <!-- Favicons -->
  <link href="/img/favicon-pencil.ico" rel="icon">

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,700,700i|Raleway:300,400,500,700,800" rel="stylesheet">

  <!-- Bootstrap CSS File -->
  <link href="/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">

  <!-- Libraries CSS Files -->
  <link href="/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet">
  <!-- <link href="/lib/animate.min.css" rel="stylesheet"> -->
  <!-- <link href="/lib/venobox.css" rel="stylesheet"> -->
  <!-- <link href="/lib/owl.carousel.min.css" rel="stylesheet"> -->

  <!-- Main Stylesheet File -->
  <link href="/css/style.css" rel="stylesheet">
</head>

<body>

	<!--==========================
    Header
  ============================-->

	<header id="header" class="navbar navbar-default navbar-fixed-top">
    <div class="container">

      <div id="logo" class="pull-left">
        <h1><a href="/"><i class="fa fa-pencil fa-logo"></i><span>E-</span>LEARN</a></h1>
      </div>

      <nav id="nav-menu-container">
        <ul class="nav-menu">
					<li class="<%= (title == 'Home') ? 'menu-active' : ''  %>"><a href="/">Home</a></li>
          <li class="<%= (title == 'All Courses') ? 'menu-active' : ''  %>"><a href="/courses/all">All Courses</a></li>
          <li class="<%= (title == 'About') ? 'menu-active' : ''  %>"><a href="/about">About</a></li>
					<% if (currentUser) { %>
							<button class="auth-buttons dropdown-toggle" id="dropdownMenu2" data-toggle="dropdown">Hello, <%= currentUser.username %></button>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu2">
                <a class="dropdown-item" href="/<%= currentUser.type %>s/dashboard">Your Dashboard</a>
                <a class="dropdown-item" href="/users/<%= currentUser.username %>">Your Profile</a>
                <a class="dropdown-item" href="/users/logout">Log out</a>
              </div>

          <% } else { %>
						<span><a class="auth-buttons" href="/users/signup">Sign up</a></span>
						<span><a class="auth-buttons" href="/users/login">Log in</a></span>
          <% } %>
        </ul>
      </nav><!-- #nav-menu-container -->
    </div>

    <!-- flash messages -->
    <div class="messages-container">
      <ul class="messages">
        <% if (errorMessages) { errorMessages.forEach(function(message) { %>
          <li class="alert alert-warning"><%= message %></li>
        <% });} if (infoMessages) { infoMessages.forEach(function(message) { %>
          <li class="alert alert-info"><%= message %></li>
        <% });} %>
      </ul>
    </div>

  </header><!-- #header -->
