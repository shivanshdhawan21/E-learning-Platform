<%- include('../partials/header') %>

<main id="main" class="main-page">

<div class="padded-container">
	<div class="section-header">
		<h2>Create Course</h2>
	</div>

	<form method="post" action="/instructors/createCourse" class="create-form">
		<div>
			<input class="form-control" type="text" name="title" placeholder="title" required>
		</div>
		<div>
			<input class="form-control" type="text" name="topic" placeholder="topic" required>
		</div>
		<div>
			<textarea class="form-control" name="description" placeholder="course description..." required></textarea>
		</div>
		<div>
			<input class="form-button" type="submit" value="Create Course">
		</div>
	</form>
</div>

</main>

<%- include('../partials/footer') %>
