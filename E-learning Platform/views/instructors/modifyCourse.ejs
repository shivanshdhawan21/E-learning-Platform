<%- include('../partials/header') %>

<main id="main" class="main-page">

<div class="padded-container">
	<div class="section-header">
		<h2>Modify Course</h2>
	</div>

	<form method="post" action="/instructors/modifyCourse/<%= course._id %>" class="create-form">
		<label for="title">Title</label>
		<input type="text" name="title" class="form-control" value="<%= course.title %>">
		<br />
		<label for="description">Description</label>
		<textarea style="min-height: 12rem" name="description" class="form-control"><%= course.description %></textarea>
		<br />
		<input type="submit" class="form-button" value="Modify Course">
	</form>
</div>

</main>

<%- include('../partials/footer') %>
