<%- include('partials/header') %>

<!-- <main id="main"> -->

  <!--==========================
    Intro Section
  ============================-->
  <section id="intro">
    <div class="intro-container">
      <h1 class="mb-4 pb-0"><span>E-</span>Learning Platform</h1>
      <p class="mb-4 pb-0">to learn just about anything.</p>
      <!-- <a href="https://www.youtube.com/watch?v=jDDaplaOz7Q" class="venobox play-btn mb-4" data-vbtype="video"
        data-autoplay="true"></a> -->
      <div class="intro-buttons-container">
        <form action="/users/login" method="post">
          <input name="username" type="hidden" value="testInstructor">
          <input name="password" type="hidden" value="1234">
          <button type="submit" name="test-login" class="about-btn">Login as test instructor</button>
        </form>
        <form action="/users/login" method="post">
          <input name="username" type="hidden" value="testStudent">
          <input name="password" type="hidden" value="1234">
          <button type="submit" name="test-login" class="about-btn">Login as test student</button>
        </form>
        <!-- <button type="submit" name="test-login" id="testStudent-btn" class="about-btn">Login as test instructor</button>
        <button type="submit" name="test-login" id="testIstructor-btn" class="about-btn">Login as test instructor</button>
        <p id="res-test-login"></p> -->
      </div>
    </div>
  </section>

  <main id="main">

    <!--==========================
      Courses Section
    ============================-->
    <section id="hotels" class="section-with-bg">

      <div class="container">
        <div class="section-header">
          <h2>Latest Courses</h2>
          <p>Her are some of our latest courses</p>
        </div>

        <div class="row">

          <% courses.forEach(function(course) { %>
            <div class="col-lg-4 col-md-6">
              <div class="hotel">
                <div class="hotel-img">
                  <img src="/img/teacher.jpeg" alt="Hotel 1" class="img-fluid">
                </div>
                <h3><a href="/courses/<%= course._id %>/details"><%= course.title %></a></h3>
                <p><%= course.topic %></p>
                <div class="stars">
                  <i class="fa fa-star"></i>
                  <i class="fa fa-star"></i>
                  <i class="fa fa-star"></i>
                  <i class="fa fa-star"></i>
                  <i class="fa fa-star"></i>
                </div>
                <div class="">
                  <a class="btn card-btn" href="/courses/<%= course._id %>/details">View Course</a>
                </div>
              </div>
            </div>
          <% }); %>

        </div>
      </div>

    </section>

  </main>

<%- include('partials/footer') %>
